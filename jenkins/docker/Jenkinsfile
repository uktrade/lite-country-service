node {
    withEnv(["FULL_IMAGE_NAME=registry.lite.bis.gov.uk/lite/${IMAGE_NAME}"]) {

        deleteDir()
        step ([$class: 'CopyArtifact',
            projectName: '$SERVICE_BUILD_JOB',
            filter: 'docker/**',
            selector: [$class: 'TriggeredBuildSelector', fallback: false]
        ]);

        sh '/docker/docker build -f docker/Dockerfile -t $FULL_IMAGE_NAME:$BUILD_NUMBER -t $FULL_IMAGE_NAME:latest .'
        sh '/docker/docker push $FULL_IMAGE_NAME'
    }
}
